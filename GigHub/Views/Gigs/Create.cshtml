@model GigHub.ViewModel.GigFormViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title">Add new Gig</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <p class="alert alert-info">All fields are <strong >required</strong></p>

    <div class="form-group">
        @Html.LabelFor(x => x.Venue)
        @Html.TextBoxFor(x => x.Venue, new {@class = "form-control", autofocus = "autofocus"})
        @Html.ValidationMessageFor(x => x.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Date)
        @Html.TextBoxFor(x => x.Date, new {@class = "form-control", placeholder = DateTime.Now.ToString("dd MMM yyyy")})
        @Html.ValidationMessageFor(x => x.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Time)
        @Html.TextBoxFor(x => x.Time, new {@class = "form-control", placeholder = DateTime.Now.ToString("HH:mm")})
        @Html.ValidationMessageFor(x => x.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Genre)
        @Html.DropDownListFor(x => x.Genre, new SelectList(Model.Genres, "Id", "Name"), string.Empty, new {@class = "form-control"})
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}